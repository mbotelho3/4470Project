	    public void mouseDragged(MouseEvent ev) {
	    	if(im != null && isFlipped && ev.getX() <= imW
	    			&& ev.getY() <= imH) {
	    		pts.add(ev.getPoint());
	    	    repaint();
	    	}
	    }
	    
	    public void mouseReleased(MouseEvent ev) {
	    }
	    
	    public void mouseMoved(MouseEvent ev) {
		}
